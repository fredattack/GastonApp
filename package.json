{
    "name": "@gastonapp/root",
    "version": "1.0.0",
    "private": true,
    "description": "GastonApp - Pet event management monorepo",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo dev",
        "dev:web": "turbo dev --filter=@gastonapp/web",
        "dev:mobile": "turbo dev --filter=@gastonapp/mobile",
        "build": "turbo build",
        "build:web": "turbo build --filter=@gastonapp/web",
        "lint": "turbo lint",
        "format": "turbo format",
        "type-check": "turbo type-check",
        "test": "turbo test",
        "clean": "turbo clean && rm -rf node_modules .turbo",
        "deploy": "./.deploy/deploy.sh",
        "deploy:remote": "./.deploy/remote-deploy.sh",
        "docker:build": "docker-compose -f .deploy/docker-compose.yml build",
        "docker:up": "docker-compose -f .deploy/docker-compose.yml up -d",
        "docker:down": "docker-compose -f .deploy/docker-compose.yml down",
        "docker:logs": "docker-compose -f .deploy/docker-compose.yml logs -f",
        "docker:ps": "docker-compose -f .deploy/docker-compose.yml ps"
    },
    "devDependencies": {
        "turbo": "^2.3.3",
        "prettier": "^3.4.2",
        "eslint": "^8.57.1"
    },
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@10.14.0"
}